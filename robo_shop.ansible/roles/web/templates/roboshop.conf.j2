proxy_http_version 1.1;
location /images/ {
  expires 5s;
  root   /usr/share/nginx/html;
  try_files \$uri /images/placeholder.jpg;
}



 location /api/catalogue/ { proxy_pass http://{{catalogue_host}}:8082/; }
 location /api/user/ { proxy_pass http://{{user_host}}:8081/; }
 location /api/cart/ { proxy_pass http://{{cart_host}}:8083/; }
 location /api/shipping/ { proxy_pass http://{{shipping_host}}:8084/; }
 location /api/payment/ { proxy_pass http://{{payment_host}}:8085/; }

location /health {
  stub_status on;
  access_log off;
}